// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  published Boolean  @default(false)
  author    Personal @relation(fields: [authorId], references: [id])
  authorId  String   @db.Uuid
}

model Client {
  id       String    @id @default(uuid()) @db.Uuid
  email    String   @unique
  password String?
  name     String?
  isActive Boolean   @default(true)
  Routine  Routine[]
  key      String?
  Personal     Personal  @relation(fields: [personalId], references: [id])
  personalId   String    @db.Uuid
}

model Personal {
  id       String    @id @default(uuid()) @db.Uuid
  email    String    @unique
  password String
  name     String?
  posts    Post[]
  Routine  Routine[]
  Client  Client[]
}

model Exercise {
  id            String         @id @default(uuid()) @db.Uuid
  title         String
  description   String?
  muscularGroup EMuscularGroup
  Workout       Workout[]
}

model Routine {
  id           String    @id @default(uuid()) @db.Uuid
  title        String
  observations String?
  client       Client    @relation(fields: [clientId], references: [id])
  clientId     String    @db.Uuid
  Personal     Personal  @relation(fields: [personalId], references: [id])
  personalId   String    @db.Uuid
  createdAt    DateTime  @default(now())
  TrainingDay  TrainingDay[]
}

model TrainingDay {
  id           String     @id @default(uuid()) @db.Uuid
  day          EDayOfWeek
  routine      Routine    @relation(fields: [routineId], references: [id])
  routineId    String     @db.Uuid
  Workout      Workout[]
}

model Workout {
  id           String     @id @default(uuid()) @db.Uuid
  series       Int
  reps         Int
  observations String?
  exercise     Exercise   @relation(fields: [exerciseId], references: [id])
  exerciseId   String     @db.Uuid
  trainingDay  TrainingDay[]
  routineId    String     @db.Uuid
}

enum EDayOfWeek {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

enum EMuscularGroup {
  back
  chest
  arms
  legs
  shoulders
}
